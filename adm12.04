have adm12.04 &&
{

_completion()
{
    # Built-in completion
    # see: http://www.gnu.org/software/bash/manual/html_node/Programmable-Completion-Builtins.html
    compopt -o filenames
}

_adm12.04()
{
	local cur prev opts
	
	COMPREPLY=()
	_get_comp_words_by_ref cur prev
	# This should contain all supported commands and aliases
	# However, the following alias was removed: wa
	opts="aaf add-directory add-file af diff help init install l list ll lw list-file new-addon remove-file revert rf seal status ul uninstall uninstall-all up update-file version which-addon"
	
	case $prev in
		# All ADM commands' completion options
		adm12.04)
			COMPREPLY=( $( compgen -W "$opts" -- "$cur" ) )
			;;
		add-directory)
			_completion
			COMPREPLY=( $( compgen -W "-f -size" -- "$cur" ) \
			$( compgen -f -- "$cur" ) )
			;;
		add-file|af)
			_completion
			COMPREPLY=( $( compgen -W "-d -f -size" -- "$cur" ) \
			$( compgen -f -- "$cur" ) )
			;;
		diff)
			_completion
			COMPREPLY=( $( compgen -W "* -all -index -r -size" -- "$cur" ) \
			$( compgen -f -- "$cur" ) )
			;;
		help)
			COMPREPLY=( $( compgen -W "$opts" -- "$cur" ) )
			;;
		init)
			COMPREPLY=( $( compgen -W "-branch -repository" -- "$cur" ) )
			;;
		install)
			_completion
			COMPREPLY=( $( compgen -W "--force-all --force-depen --force-ivy-tree --force-patch -v" -- "$cur" ) \
			$( compgen -f -- "$cur" ) )
			;;
		list|l)
			COMPREPLY=( $( compgen -W "-head -m -tree -work -works" -- "$cur" ) )
			;;
		ll|lw)
			COMPREPLY=( $( compgen -W "-c -m -tree" -- "$cur" ) )
			;;
		# Could be improved (with : `adm12.04 list` | grep)
		list-file)
			return 0
			;;
		new-addon)
			_completion
			COMPREPLY=( $( compgen -W "-d" -- "$cur" ) \
			$( compgen -f -- "$cur" ) )
			;;
		revert)
			_completion
			COMPREPLY=( $( compgen -W "-all -r" -- "$cur" ) \
			$( compgen -f -- "$cur" ) )
			;;
		seal)
			COMPREPLY=( $( compgen -W "-revision" -- "$cur" ))
			;;
		status)
			COMPREPLY=( $( compgen -W "-detail" -- "$cur" ))
			;;
		# Could be improved (with : `adm12.04 list` | grep)
		uninstall)
			COMPREPLY=( $( compgen -W "--force-revert --no-reload" -- "$cur" ) )
			;;
		uninstall-all)
			COMPREPLY=( $( compgen -W "--force-revert" -- "$cur" ))
			;;
		update-file|up)
			_completion
			COMPREPLY=( $( compgen -W "-d -size" -- "$cur" ) \
			$( compgen -f -- "$cur" ) )
			;;
		version)
			return 0
			;;
		which-addon|wa)
			_completion
			COMPREPLY=( $( compgen -W "-detail" -- "$cur" ) \
			$( compgen -f -- "$cur" ) )
			;;
		# Default completion
		*)
			_completion
			COMPREPLY=( $( compgen -f -- "$cur" ) )   
			;;
	esac
	
	return 0
} &&
complete -F _adm12.04 adm12.04

}
